datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  accounts      Account[]
  sessions      Session[]
  
  // Gaming Profile fields
  preferences   Preferences?
  bookings      Booking[]
  wallet        Wallet?
  membership    Membership?
  stats         Stats?
}

enum Role {
  USER
  ADMIN
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Preferences {
  id              String   @id @default(cuid())
  userId          String   @unique
  favoriteGames   String[]
  hasPS5          Boolean  @default(false)
  hasVR           Boolean  @default(false)
  hasRacingSim    Boolean  @default(false)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Game {
  id        String   @id @default(cuid())
  title     String
  image     String?
  genre     String?
  platform  Platform
  slots     Slot[]   @relation("SlotGames")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Slot {
  id            String      @id @default(cuid())
  title         String?
  type          Platform
  // date removed - slots are now templates
  startTime     String      // Format: "17:00"
  endTime       String      // Format: "18:00"
  duration      Int         // in minutes
  price         Float
  maxPlayers    Int         @default(1)
  status        SlotStatus  @default(AVAILABLE)
  isPublic      Boolean     @default(true)
  supportedGames Game[]     @relation("SlotGames")
  bookings      Booking[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

enum Platform {
  PS5
  VR
  RACING_SIM
}

enum SlotStatus {
  AVAILABLE
  BOOKED
  BLOCKED
  MAINTENANCE
}

model Booking {
  id          String   @id @default(cuid())
  userId      String
  slotId      String?
  date        DateTime
  duration    Int      // in minutes
  type        String   // Legacy field, keeping for compatibility
  status      String   // Upcoming, Completed, Cancelled
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  slot        Slot?    @relation(fields: [slotId], references: [id])
}

model Wallet {
  id        String   @id @default(cuid())
  userId    String   @unique
  balance   Float    @default(0.0)
  credits   Int      @default(0)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Membership {
  id        String   @id @default(cuid())
  userId    String   @unique
  tier      String   @default("Bronze") // Bronze, Silver, Gold
  points    Int      @default(0)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Stats {
  id              String   @id @default(cuid())
  userId          String   @unique
  totalPlaytime   Int      @default(0) // in minutes
  mostPlayedGame  String?
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
