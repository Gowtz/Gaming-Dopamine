datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  accounts      Account[]
  sessions      Session[]
  
  // Gaming Profile fields
  preferences   Preferences?
  bookings      Booking[]
  wallet        Wallet?
  membership    Membership?
  stats         Stats?
}

enum Role {
  USER
  ADMIN
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Preferences {
  id              String   @id @default(cuid())
  userId          String   @unique
  favoriteGames   String[]
  hasPS5          Boolean  @default(false)
  hasVR           Boolean  @default(false)
  hasRacingSim    Boolean  @default(false)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Booking {
  id          String   @id @default(cuid())
  userId      String
  date        DateTime
  duration    Int      // in minutes
  type        String   // PS5, VR, Racing
  status      String   // Upcoming, Completed, Cancelled
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Wallet {
  id        String   @id @default(cuid())
  userId    String   @unique
  balance   Float    @default(0.0)
  credits   Int      @default(0)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Membership {
  id        String   @id @default(cuid())
  userId    String   @unique
  tier      String   @default("Bronze") // Bronze, Silver, Gold
  points    Int      @default(0)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Stats {
  id              String   @id @default(cuid())
  userId          String   @unique
  totalPlaytime   Int      @default(0) // in minutes
  mostPlayedGame  String?
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
